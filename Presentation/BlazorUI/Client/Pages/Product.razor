@page "/product"

@inject ProductService _producService;

@if (_producService.Products != null)
{
    @foreach (var product in _producService.Products)
    {
        <ProductGrid Product="product"></ProductGrid>
    }
}
else
{
    <Loading></Loading>
}

@code {

    protected override async Task OnInitializedAsync()
    {
        await _producService.GetProductList();
        base.OnInitialized();
    }
}
